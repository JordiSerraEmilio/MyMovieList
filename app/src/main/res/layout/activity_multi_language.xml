<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    tools:context=".login.multilanguage.MultiLanguageActivity">

    <TextView
        android:id="@+id/tv_language_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/baseorange"
        android:fontFamily="@font/opensans"
        android:gravity="center"
        android:text="LANGUAGE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/bu_language_save"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_language_title"
        app:layout_constraintVertical_bias="0.918" />

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="408dp"
        android:layout_height="40dp"
        android:background="@color/baseorange"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_language_title"
        app:layout_constraintVertical_bias="0.019">

        <TextView
            android:id="@+id/tv_text_language"
            android:layout_width="397dp"
            android:layout_height="30dp"
            android:background="@color/backgroundcolor"
            android:text="SELECT YOUR LANGUAGE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="416dp"
        android:layout_height="170dp"
        android:background="@color/baseorange"
        android:checkedButton="@id/rb_english"
        app:layout_constraintBottom_toTopOf="@+id/bu_language_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
        app:layout_constraintVertical_bias="0.085">

        <RadioButton
            android:id="@+id/rb_english"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:background="@color/backgroundcolor"
            android:text="English"
            android:textColor="@color/yellowishorange" />

        <RadioButton
            android:id="@+id/rb_spanish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:background="@color/backgroundcolor"
            android:text="Spanish"
            android:textColor="@color/yellowishorange"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/rb_catalan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:background="@color/backgroundcolor"
            android:text="Catalan"
            android:textColor="@color/yellowishorange" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>