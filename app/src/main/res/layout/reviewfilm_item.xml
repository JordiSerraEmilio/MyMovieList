<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:cardBackgroundColor="@color/backgroundcolor">

    <LinearLayout
        android:id="@+id/ll_reviewfilm_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:background="@color/cardviewbackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_user_item"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_marginTop="1dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_username_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="24sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_commnet_item"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeTextType="uniform"
                android:padding="5dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/rb_reviewitem"
                style="@android:style/Widget.Holo.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:indeterminateTint="#5A5A5A"
                android:progressBackgroundTint="#5A5A5A"
                android:progressTint="@color/yellow"
                android:rating="1"
                android:secondaryProgressTint="#5A5A5A" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>